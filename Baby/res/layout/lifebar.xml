<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:id="@android:id/background"> 
        <shape> 
            <corners android:radius="5dp" /> 
            <gradient 
                    android:startColor="#FFf94444" 
                    android:centerColor="#FFFF0000" 
                    android:centerY="0.5" 
                    android:endColor="#FFf94444" 
                    android:angle="270" 
            /> 
        </shape> 
    </item> 
    <item>
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="#FFfcfc7c"
                    android:centerColor="#FFFFFF00" 
                    android:centerY="0.5" 
                    android:endColor="#FFfcfc7c" 
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>
