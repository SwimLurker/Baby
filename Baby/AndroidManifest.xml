<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.slstudio.baby"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
         <activity
            android:name="org.slstudio.baby.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/NoTitle" 
            android:configChanges="orientation|keyboard|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" /> 
            </intent-filter>
        </activity>
        <activity
            android:name="org.slstudio.baby.MainActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboard|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.slstudio.baby.LianLianKanGameActivity" 
            android:configChanges="orientation|keyboard|screenSize">
            <intent-filter>
                <action android:name="org.slstudio.baby.LianLianKanGameActivity" />
                <category android:name="android.intent.category.DEFAULT" /> 
            </intent-filter>
        </activity>
        <activity
            android:name="org.slstudio.baby.PuzzleGameActivity" 
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="org.slstudio.baby.PuzzleGameActivity" />
                <category android:name="android.intent.category.DEFAULT" /> 
            </intent-filter>
        </activity>
        <activity
            android:name="org.slstudio.baby.PictureListActivity" 
            android:configChanges="orientation|keyboard|screenSize">
            <intent-filter>
                <action android:name="org.slstudio.baby.PictureListActivity" />
                <category android:name="android.intent.category.DEFAULT" /> 
            </intent-filter>
        </activity>
        <activity
            android:name="org.slstudio.baby.PictureActivity" 
            android:configChanges="orientation|keyboard|screenSize">
            <intent-filter>
                <action android:name="org.slstudio.baby.PictureActivity" />
                <category android:name="android.intent.category.DEFAULT" /> 
            </intent-filter>
        </activity>
        <service android:name="org.slstudio.baby.game.service.BGMusicService">
        </service>
    </application>

</manifest>
